---
import BaseLayout from '../layouts/BaseLayout.astro';
import Projects from '../components/Projects.astro';
import BlogList from '../components/BlogList.astro';
---

<BaseLayout>
    <main class="flex flex-col w-full h-full flex-1 grow pb-40">

        <h1 class="text-left text-lg font-semibold text-primary mb-4">Scott Quach</h1>
        <div class="text-left text-base text-gray-800 dark:text-gray-200">Digital Creator ( Engineer / Photographer )</div>

        <div class="flex flex-col gap-5">
            <section class="space-y-4 mt-4 mb-10">
                <p class="text-left text-gray-800 dark:text-gray-200">
                    I enjoy has been building everyday experiences. Focused on web and mobile development. Photographer by night
                </p>

                <p class="text-left text-gray-800 dark:text-gray-200">
                    Principal Software Engineer {' '}
                    <a
                        class="hover:underline text-primary font-medium"
                        href="https://www.t-mobile.com"
                        target="_blank"
                        rel="noreferrer"
                    >
                        @T-Mobile
                    </a>
                </p>
            </section>

            <!-- <section class="space-y-2.5 mb-4 mt-0.5">
                <p class="text-left font-bold text-xl md:text-3xl dark:text-gray-100">
                    Product builder with a passion for everyday experiences. Focused on web and mobile development.
                    Photographer by night.
                </p>

                <p class="text-left text-base text-gray-500 dark:text-gray-400">
                    Principal Software Engineer at {' '}
                    <a
                        class="hover:underline text-primary font-medium"
                        href="https://www.t-mobile.com"
                        target="_blank"
                        rel="noreferrer"
                    >
                        @T-Mobile
                    </a>
                </p>
            </section> -->

            <section class="mb-10">
                <div class="text-primary text-lg font-semibold text-left mb-4">Today I thought</div>
                <BlogList />
            </section>

            <section>
                <div class="text-primary text-base font-semibold text-left mb-4">Startups... ok side projects</div>
                <Projects />
            </section>
            <section>
                <div class="text-primary text-base font-semibold text-left mt-10 mb-4">Say hello</div>
                <p class="text-gray-800 dark:text-gray-200">
                    Explore my work on <a
                        class="hover:underline text-primary font-medium"
                        href="https://www.linkedin.com/in/scott-quach/"
                        target="_blank"
                        rel="noreferrer">LinkedIn</a
                    > or <a
                        class="hover:underline text-primary font-medium"
                        href="https://github.com/scottquach" target="_blank" rel="noreferrer">Github</a>.
                    <br />
                    Checkout my photography on
                    <a
                        class="hover:underline text-primary font-medium"
                        href="https://www.instagram.com/jpg.by.scottq/" target="_blank" rel="noreferrer">Instagram</a>
                    <!-- or <a href="https://www.youtube.com/@scott-quach" target="_blank" rel="noreferrer">YouTube</a>. -->
                </p>
            </section>
        </div>
    </main></BaseLayout
>
