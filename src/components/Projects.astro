---
const projects = [
    {
        name: 'Someday - Weekly Planner',
        technologies: ['IOS', 'Mobile', 'CapacitorJS'],
        description: 'A minimal weekly planner, calendar, and task-list inspired by paper.',
        link: 'https://apps.apple.com/us/app/someday-weekly-planner/id6754586557',
    },
    {
        name: 'Bill Split AI',
        technologies: ['React', 'AI', 'Cloudflare'],
        description: 'Split your restaurant bill using plain language and AI.',
        link: 'https://billsplitai.com/',
    },
    {
        name: 'Garmin Wrapped',
        technologies: ['React', 'Remix', 'Cloudflare'],
        description: 'Insights and visualizations of your Garmin data for a year in review.',
        link: 'https://garminwrapped.com/',
    },
    {
        name: 'Flow Journal',
        technologies: ['Next.js', 'AI', 'Vercel', 'Neon DB'],
        description: 'Think It. Write It. Go. A journal meant for writing, not editing.',
        link: 'https://www.flowjournalapp.com/',
    },
    {
        name: 'Make a Meal',
        technologies: ['React', 'AI', 'Cloudflare'],
        description: 'Convert any Instagram Reel recipe into markdown.',
        link: 'https://make-a-meal-app.pages.dev/',
    },
];
---

<div class="flex flex-col gap-5">
    {
        projects.map((project) => (
            <a href={project.link} target="_blank" rel="noreferrer" class="group">
                <section class="flex flex-col gap-0.5">
                    <div class="flex items-center gap-1">
                        <h3 class="font-medium group-hover:underline">{project.name}</h3>
                    </div>
                    <p class="text-base text-gray-500 dark:text-gray-400">{project.description}</p>
                    <p class="text-sm text-primary">{project.technologies.join(', ')}</p>
                </section>
            </a>
        ))
    }
</div>
