---
import { getCollection } from 'astro:content';
import { format } from 'date-fns';

const allBlogPosts = await getCollection('blog');
---

<div class="flex flex-col gap-3">
    {
        allBlogPosts.map((post, index) => (
            <>
                {index > 0 && <div class="h-px w-full bg-gray-200" />}
                <a class="flex gap-5 group justify-between" href={`blog/${post.id}`} rel="noreferrer">
                    <span class="font-medium group-hover:underline">{post.data.title}</span>
                    <span class="text-gray-500">{format(new Date(post.data.date), 'MMMM yyyy')}</span>
                </a>
            </>
        ))
    }
</div>
