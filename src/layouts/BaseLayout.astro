---
import Posthog from '../components/Posthog.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import '../styles/global.css';
const { title = 'Scott Quach' } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/ico" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="keywords"
            content="Scott Quach, Software Engineer, Web Developer, React Developer, TypeScript, Node.js, Full Stack Developer, Portfolio, photography"
        />

        <meta name="description" content="Scott Quach - Digital Creator" />

        <meta property="og:title" content="Scott Quach" />
        <meta
            property="og:description"
            content="Software Engineer and Photographer focused on building everyday experiences"
        />
        <meta property="og:image" content="https://scottquach.com/preview.jpg" />
        <meta property="og:url" content="https://scottquach.com" />
        <meta property="og:type" content="website" />

        <meta name="author" content="Scott Quach" />
        <title>{title}</title>
        <script src="https://kit.fontawesome.com/35c30d0dea.js" crossorigin="anonymous"></script>

        <!-- Preconnect to External Resources -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

        <!-- Fonts -->
        <!-- <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
            rel="preload"
            as="style"
            onload="this.onload=null;this.rel='stylesheet'"
        /> -->
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;500;700&display=swap"
            rel="preload"
            as="style"
            onload="this.onload=null;this.rel='stylesheet'"
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
            rel="stylesheet"
        />

        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "Person",
                "name": "Scott Quach",
                "url": "https://scottquach.com",
                "jobTitle": "Software Engineer",
                "sameAs": [
                    "https://github.com/scottquach",
                    "https://linkedin.com/in/scott-quach",
                    "https://instagram.com/jpg.by.scottq"
                ],
                "description": "Scott Quach is a Software Engineer specializing in React, TypeScript, and Node.js development."
            }
        </script>
    </head>
    <body>
        <div style="position: fixed; top: 1rem; right: 1rem; z-index: 999;">
            <ThemeToggle />
        </div>
        <slot />
        <Posthog />
        <!-- <Footer /> -->
    </body>

    <style></style>
</html>
